<Window x:Class="BookManagerApp.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookManagerApp.Views"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Background="#FF200E2F">
        <Label Content="Book Manager" HorizontalAlignment="Center" Margin="0,0,0,138" VerticalAlignment="Center" Foreground="White" FontSize="24" FontFamily="Segoe UI Semibold"/>
        <TextBox Text="{Binding Username}" Padding="4" HorizontalAlignment="Center" Margin="0,0,0,60" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Background="#FF3F2951" Foreground="White" BorderBrush="#00000000" SelectionBrush="White" Height="25" Cursor="IBeam" SelectionTextBrush="White"/>
        <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" Padding="4" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="120" Background="#FF3F2951" Foreground="White" BorderBrush="#00000000" SelectionBrush="White" Height="25" Cursor="IBeam"/>
        <Button Command="{Binding LoginCommand}" Padding="4" Content="Login" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Center" Width="120" FontFamily="Segoe UI Variable Small Semilight" Cursor="Hand">
            <Button.Background>
                <LinearGradientBrush EndPoint="-0.5,1" StartPoint="0.5,-1">
                    <GradientStop Color="#FFFAC4FF" Offset="0.003"/>
                    <GradientStop Color="#FF20F9DA" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Command="{Binding RegisterCommand}" Padding="4" Content="Register" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Center" Width="120" FontFamily="Segoe UI Variable Small Semilight" Cursor="Hand">
            <Button.Background>
                <LinearGradientBrush EndPoint="-0.5,1" StartPoint="0.5,-1">
                    <GradientStop Color="#FFFAC4FF" Offset="0.003"/>
                    <GradientStop Color="#FF20F9DA" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="{Binding InfoText}" HorizontalAlignment="Center" Margin="0,230,0,0" VerticalAlignment="cENTER" Foreground="White"/>
    </Grid>
</Window>
